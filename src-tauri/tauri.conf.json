{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "containerus",
  "version": "1.0.0-beta.1",
  "identifier": "org.creativdev.containerus",
  "build": {
    "beforeDevCommand": "pnpm start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist/containerus/browser"
  },
  "app": {
    "windows": [
      {
        "title": "containerus",
        "width": 1280,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": null
    }
  }
}
